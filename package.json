{
  "type": "module",
  "name": "uned-studio",
  "version": "1.4.4",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:playwright": "NEXT_PUBLIC_AREAS_FILE=areas-mcq-tests.json NEXT_PUBLIC_DISABLE_AUTH=true next dev",
    "dev:playwright-auth": "NEXT_PUBLIC_AREAS_FILE=areas-mcq-tests.json NEXT_PUBLIC_DISABLE_AUTH=false next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "test:prepare-e2e": "cp tests/testdata/areas-mcq-tests.json public/areas-mcq-tests.json && cp tests/testdata/questions-mcq-tests.json public/questions-mcq-tests.json",
    "test:cleanup-e2e": "rm -f public/areas-mcq-tests.json public/questions-mcq-tests.json",
    "test:e2e:withdata": "npm run test:prepare-e2e && playwright test && npm run test:cleanup-e2e",
    "test:e2e:auth": "npm run test:prepare-e2e && playwright test -c playwright.config.auth.ts && npm run test:cleanup-e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test": "npm run test:unit && npm run test:e2e:withdata && npm run test:e2e:auth",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check .",
    "check": "npm run typecheck && npm run format && npm run test"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^6.13.2",
    "aws-amplify": "^6.16.0",
    "isomorphic-dompurify": "^2.35.0",
    "next": "^16.1.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "babel-plugin-react-compiler": "1.0.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.8.0",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "typescript": "^5"
  }
}
